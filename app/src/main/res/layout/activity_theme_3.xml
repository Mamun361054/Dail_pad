                            android:background="@drawable/thm1"
                            android:text="1"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold"
                            android:theme="@style/AppTheme" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d2"
