<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/f8"
    tools:context="com.dialpad.home.dail_pad.MainActivity">



                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/edt1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@mipmap/f8"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#e40808"
                    android:textScaleX="1.2"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <!--<TextView-->
                <!--android:id="@+id/result"-->
                <!--android:inputType="none"-->

                <!--android:textAlignment="textEnd"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#ffffff"-->
                <!--android:textColor="#a40b0b"-->
                <!--android:textSize="30dp"-->
                <!--android:textStyle="bold" />-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"

                        android:orientation="horizontal">

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/one"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="1"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold"
                            android:theme="@style/AppTheme" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d2"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"
                            android:text="2"
                            android:textColor="#f18901"
                            android:textSize="50sp"

                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d3"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />


                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/bclear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/f8"
                            android:text="Clear"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#f9130b"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/c"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/f8"
                            android:text="C"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#3a10e4"
                            android:textScaleX="2"
                            android:textSize="25dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"

                        >

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d4"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="4"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d5"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="5"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d6"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="6"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button

                            android:id="@+id/call_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/f8"
                            android:layerType="software"
                            android:text="Call List"
                            android:textAllCaps="true"
                            android:textColor="#fd0707"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"

                        >

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d7"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="7"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d8"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="8"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d9"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="9"
                            android:textColor="#f18901"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/contack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/f8"

                            android:layerType="software"
                            android:text="contact"
                            android:textColor="#fd0707"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"

                        android:orientation="horizontal">


                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/dstar"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:background="@mipmap/f8"

                            android:clickable="true"
                            android:gravity="center"
                            android:shadowColor="#f20c0c"
                            android:text="*"
                            android:textColor="#0b65ec"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/d0"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"

                            android:text="0"
                            android:textColor="#ec1a17"
                            android:textSize="70sp"
                            android:textStyle="bold" />

                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/dhash"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:background="@mipmap/f8"

                            android:clickable="true"
                            android:shadowColor="#f20c0c"
                            android:text="#"
                            android:textColor="#0b65ec"
                            android:textSize="50sp"
                            android:textStyle="bold" />


                        <Button
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:id="@+id/call"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@mipmap/f8"
                            android:layout_marginLeft="10dp"
                            android:layerType="software"
                            android:text="Call"
                            android:textColor="#fd0707"
                            android:textSize="25sp"
                            android:textStyle="bold" />


                    </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>