<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="com.dialpad.home.dail_pad.MainActivity">



            <TextView

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/edt1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/theme"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textScaleX="1.2"
                android:textSize="30sp"
                android:textStyle="bold" />
    <Button
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/msg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/sms4"
        android:layerType="software"
        android:textColor="#fd0707"
        android:textSize="20sp"
        android:textStyle="bold" />


            <!--<TextView-->
            <!--android:id="@+id/result"-->
            <!--android:inputType="none"-->

            <!--android:textAlignment="textEnd"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#ffffff"-->
            <!--android:textColor="#a40b0b"-->
            <!--android:textSize="30dp"-->
            <!--android:textStyle="bold" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"

                android:orientation="horizontal">

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/one"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"

                    android:text="1"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d2"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="2"
                    android:textColor="#f18901"
                    android:textSize="50sp"

                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />


                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/bclear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="#484746"
                    android:text="Clear"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#f9130b"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#a7dc321c"
                    android:text="C"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#3a10e4"
                    android:textScaleX="2"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"

                >

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d4"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="4"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d5"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="5"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d6"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="6"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/call_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_marginLeft="10dp"
                    android:background="#a7c25b"
                    android:layerType="software"
                    android:text="Call List"
                    android:textAllCaps="true"
                    android:textColor="#fd0707"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"

                >

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d7"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="7"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d8"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="8"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d9"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="9"
                    android:textColor="#f18901"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/contack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#3678ea"
                    android:layerType="software"
                    android:text="contact"
                    android:textColor="#fd0707"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">


                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/dstar"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/theme"

                    android:gravity="center"
                    android:text="*"
                    android:textColor="#f7ff09"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/d0"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/theme"
                    android:text="0"
                    android:textColor="#ec1a17"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/dhash"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    android:background="@drawable/theme"
                    android:clickable="true"
                    android:shadowColor="#f20c0c"
                    android:text="#"
                    android:textColor="#f7ff09"
                    android:textSize="50sp"
                    android:textStyle="bold" />


                <Button
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:id="@+id/call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@mipmap/call5"

                    android:layerType="software"

                    android:textColor="#0f5b17"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>