<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@mipmap/iphn"
    tools:context="com.dialpad.home.dail_pad.ios">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"


                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"
                android:textScaleX="1.2"
                android:textSize="30sp"
                android:textStyle="bold" />



        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/result"-->
        <!--android:inputType="none"-->

        <!--android:textAlignment="textEnd"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#ffffff"-->
        <!--android:textColor="#a40b0b"-->
        <!--android:textSize="30dp"-->
        <!--android:textStyle="bold" />-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:textStyle="bold"/>

                    <Button
android:id="@+id/d2"
                        android:layout_width="wrap_content"
                        android:text="2"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:textStyle="bold"/>


                    <Button
android:id="@+id/d3"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="3"
                        android:textStyle="bold"/>






                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:id="@+id/d4"
                        android:layout_width="wrap_content"
                        android:text="4"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:textStyle="bold"/>

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/d5"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="5"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/d6"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="6"
                        android:textStyle="bold"/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/d7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="7"
                        android:textStyle="bold"/>

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/d8"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="8"
                        android:textStyle="bold"/>

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/d9"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="3"
                        android:textStyle="bold"/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
              android:layout_marginTop="5dp"

                    android:orientation="horizontal">


                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/dstar"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="*"
                        android:textStyle="bold"/>

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/d0"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="0"
                        android:textStyle="bold"/>

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/dhash"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/theme5"
                        android:text="#"
                        android:textStyle="bold"/>
                </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_gravity="center">
                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/call"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#0c7e0e"

                        android:text="Call"
                        android:textColor="#ffffff"
                        android:textSize="35sp" />
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/bclear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/theme5"
                        android:text="Del"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="#f9130b"
                        android:textStyle="bold" />
                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/msg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/sms2"
                        android:layerType="software"

                        android:textColor="#fd0707"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <Button

                        android:id="@+id/call_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/list"
                        android:layerType="software"

                        android:textAllCaps="true"
                        android:textColor="#fd0707"

                        android:textStyle="bold" />

                    <Button
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:id="@+id/contack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@mipmap/book2"
                        android:layerType="software"
                        android:textColor="#fd0707"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
